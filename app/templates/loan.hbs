<div class="row">
  <form role="form">
    <div class="form-group">
      <div class="col-sm-2">
        <label for="name">Name</label>
        {{input value=name class="form-control" id="name"}}
      </div>
      <div class="col-sm-2">
        <label for="balance">Balance</label>
        {{input value=balance class="form-control" id="balance"}}
      </div>
      <div class="col-sm-2">
        <label for="interest">Interest Rate</label>
        {{input value=interest class="form-control" id="interest"}}
      </div>
      <div class="col-sm-2">
        <label for="monthly">Monthly Payment</label>
        {{input value=monthly class="form-control" id="monthly"}}
      </div>
      <div class="col-sm-2 col-sm-offset-2">
        <button {{action calculate}} class="btn btn-primary">Calculate</button>
      </div>
    </div>
  </form>
</div>

{{#if canShowTable}}
  <div class="row">
    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <td>Month</td>
          <td>Amount Paid</td>
          <td>New Balance</td>
        </tr>
      </thead>
      <tbody>
        {{#each payment in payments}}
        <tr>
          <td>{{payment.date}}</td>
          <td class="pointer">
            {{inline-editable action="adjustPayment" number=payment.number value=payment.amountPaid}}
          </td>
          <td>{{payment.newBalance}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
